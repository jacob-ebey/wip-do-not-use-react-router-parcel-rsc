{
  "name": "parcel-react-server-starter",
  "private": true,
  "version": "0.0.0",
  "targets": {
    "server": {
      "source": "app/server.ts",
      "context": "react-server",
      "scopeHoist": false,
      "includeNodeModules": {
        "express": false
      }
    }
  },
  "scripts": {
    "build": "parcel build && node prerender.mjs",
    "clean": "rm -rf dist node_modules .parcel-cache .react-router .react-router-parcel",
    "dev": "parcel",
    "start": "node ./dist/server/server.js"
  },
  "dependencies": {
    "@parcel/runtime-rsc": "^2.14.4",
    "@ryanflorence/async-provider": "^0.0.1",
    "express": "^4.21.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "0.0.0-experimental-e988dc602",
    "react-server-dom-parcel": "^19.1.0"
  },
  "devDependencies": {
    "@react-router/dev": "0.0.0-experimental-e988dc602",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^4",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "parcel": "^2.14.4",
    "parcel-config-react-router-experimental": "^1.0.10",
    "postcss": "^8.2.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.4"
  }
}
